# Odoo 18.0 Docker Environment Variables
# Copy this file to .env and modify as needed

# Database configuration
POSTGRES_DB=postgres
POSTGRES_USER=odoo
POSTGRES_PASSWORD=odoo
PGDATA=/var/lib/postgresql/data/pgdata

# Odoo configuration
DB_HOST=db
DB_PORT=5432
DB_USER=odoo
DB_PASSWORD=odoo
DB_NAME=odoo_prod

# Odoo admin password
ODOO_ADMIN_PASSWORD=admin_docker_2025

# Ports
ODOO_PORT=8069
POSTGRES_PORT=5432
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Environment
ODOO_ENV=production
ODOO_LOG_LEVEL=info

# Workers (adjust based on your server specs)
ODOO_WORKERS=4
ODOO_MAX_CRON_THREADS=2

# Memory limits (in bytes)
ODOO_LIMIT_MEMORY_HARD=2684354560
ODOO_LIMIT_MEMORY_SOFT=2147483648

# Timeouts (in seconds)
ODOO_LIMIT_TIME_CPU=600
ODOO_LIMIT_TIME_REAL=1200

# SSL Configuration
SSL_CERT_PATH=./nginx/ssl/server.crt
SSL_KEY_PATH=./nginx/ssl/server.key

# Backup configuration
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7

# Email configuration (optional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_SSL=True

# Redis configuration (if using Redis for sessions)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Monitoring
ENABLE_MONITORING=false
GRAFANA_ADMIN_PASSWORD=admin

# Development settings (set to true for development)
DEVELOPMENT_MODE=false
ENABLE_DEBUG=false
RELOAD_ON_CHANGE=false
